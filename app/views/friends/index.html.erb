<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1@1.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-5nFj+FLfis26w9QK6jwYJtiqZPZh2w1kaQ8ir5s3vH5wKQQpZ2rX5xRVeylKaDr" crossorigin="anonymous">


<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends">
  <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Show Friend Details</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to "Show Friend", friend_path(friend) %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="friendActionsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="visually-hidden">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                  <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
                </svg>
              </span>
            </button>
            <div class="dropdown-menu" aria-labelledby="friendActionsDropdown">
              <%= link_to 'View', friend_path(friend), class: 'dropdown-item' %>
              <%= link_to 'Edit', edit_friend_path(friend), class: 'dropdown-item' %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to "New friend", new_friend_path %>


